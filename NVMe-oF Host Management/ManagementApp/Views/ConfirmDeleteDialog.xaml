<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ManagementApp.Views.ConfirmDeleteDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ManagementApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <TextBlock TextWrapping="Wrap">
            <Run Text="{x:Bind _connection.Descriptor.Guid}" />
            <LineBreak />
            <Run Text="{x:Bind AddressTypeString}" />
            <LineBreak />
            <Run Text="{x:Bind AddressString}" />
            <LineBreak />
            <Run Text="{x:Bind _connection.Descriptor.Nqn}" />
            <LineBreak />
            <Run Text="{x:Bind _connection.Descriptor.NtObjectPath}" />
        </TextBlock>
    </StackPanel>
</Page>
